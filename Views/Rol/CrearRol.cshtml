@using DKbase.web
@{
    Layout = null; 
    var mensaje = ViewData["Mensaje"] as string;
}
@model List<DKbase.web.cRol>;
<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 500px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 90%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 14px;
        }

        button[type="submit"] {
            padding: 10px 20px;
            background-color: #007bff;
            border: none;
            border-radius: 3px;
            color: #fff;
            font-size: 14px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
        /* Estilos para el contenedor de la grilla */
        .grid-container {
            max-width: 800px; /* Ajusta el ancho máximo según tus preferencias */
            margin: 0 auto; /* Centra horizontalmente el contenedor */
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Estilos para la grilla dentro del contenedor */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px; /* Espacio superior */
        }

        /* Estilos para las celdas de la grilla */
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd; /* Línea divisoria entre filas */
        }

        /* Estilos para la paginación */
        .pagination {
            margin-top: 20px; /* Espacio superior */
            text-align: center;
        }

        .pagination span {
            display: inline-block;
            padding: 5px 10px;
            margin: 0 5px;
            cursor: pointer;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 3px;
            font-size: 14px;
        }

        .pagination span.active {
            background-color: #007bff;
            color: #fff;
            border: 1px solid #007bff;
        }

    </style>
</head>
<body>
    <div class="container">
        <h2>Crear Rol</h2>
            <form method="post" action="/admin/home/crearrol">
                <label for="rolNombre">Nombre del Rol:</label>
                <input type="text" id="rolName" name="rolName">
                <button type="submit" id="crearRolBtn">Crear Rol</button>
                <button type="submit" id="volverAtras">Atrás</button>
            </form>
        <h2>Modificar nombre de Usuario</h2>

            <form class="rol-form" method="post" action="/admin/home/crearrol">
                <div class="form-group">
                    <label for="idrol">ID del Usuario:</label>
                    <input type="text" class="form-control" id="inputIdrol" name="idrol">
                </div>
                <div class="form-group">
                    <label for="newName">Nuevo Nombre:</label>
                    <input type="text" class="form-control" id="newName" name="newName" required>
                </div>
                <button type="submit" class="btn btn-primary" id="modificarUsuarioBtn">Modificar Nombre</button>
            </form>
    </div>
</body>
<script>
    // Obtener el valor del parámetro "idrol" de la URL
var urlParams = new URLSearchParams(window.location.search);
var idRolValue = urlParams.get("idrol");

// Colocar el valor en el campo de entrada
document.getElementById("inputIdrol").value = idRolValue;

</script>
</html>