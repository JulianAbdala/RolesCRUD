@using DKbase.web
@{
    Layout = null; 
    var mensaje = ViewData["Mensaje"] as string;
}
@model List<DKbase.web.cRol>;
<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <style>
                body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Estilos para el formulario */
        .rol-form {
            text-align: center;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        /* Estilos para los elementos del formulario */
        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
        }

        /* Estilo para el botón */
        #modificarUsuarioBtn {
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            outline: none;
        }

        #volverAtras {
            background-color: #a4aab1;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            outline: none;
        }
    </style>
</head>
<body>
    <form class="rol-form" method="post" action="/admin/rol/modificarrol">
        <div class="form-group">
            <input type="text" class="form-control" id="inputIdrol" name="idrol" style="display: none;">
        </div>

        <div class="form-group">
            <label for="newName">Nuevo Nombre:</label>
            <input type="text" class="form-control" id="newName" name="newName">
        </div>
        <button type="submit" class="btn btn-primary" id="modificarUsuarioBtn">Aceptar</button>
        <button type="button" id="volverAtras">Atrás</button>
    </form>
    </div>
</body>
<script src="~/js/script.js"></script>
<script>

var urlParams = new URLSearchParams(window.location.search);
var idRolValue = urlParams.get("idrol");


document.getElementById("inputIdrol").value = idRolValue;

</script>
</html>