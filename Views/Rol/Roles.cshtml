@using DKbase.web
@{
    Layout = null;
    var mensaje = ViewData["Mensaje"] as string;
}
@model List<DKbase.web.cRol>;
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <title>Vista Admin</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>

        table {
            width: 80%;

            border-collapse: collapse;

            margin-bottom: 20px;
        }


        th {
            width: 100px;

            padding: 8px;

            border: 1px solid #ccc;

            text-align: left;

        }
        td {
            width: 100px;

            padding: 8px;

            border: 1px solid #ccc;

            text-align: left;
        }
        body {
            margin: 0;
            padding: 0;
            font-size: small;
        }
        
        table,
        th,
        td {
            border: 1px solid #ccc;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
        }


        .pagination {
            display: block;
            margin-top: 20px;
            margin-left: 20px;
        }

        .page-number,
        .arrow-button {
            margin: 0 5px;
            cursor: pointer;
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .page-number.active {
            background-color: #007bff;
            color: #fff;
        }

        .arrow-button.pointer {
            cursor: pointer;
        }


        .search-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }

        input[type="text"] {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button:hover {
            outline: none;
        }

        .rows-per-page-container {
            margin-left: 20px;
        }

        .rows-per-page-container button {
            padding: 5px 10px;
            margin: 5px;
            border: 1px solid #ccc;
            background-color: #0056b3;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
        }

        .rows-per-page-container button:hover {
            background-color: #007bff;
            border-color: #007bff;
        }
        nav ul li a:hover {
            color: #ff6600; 
}

        .rows-per-page-container button:focus {
            outline: none;
        }

        .rows-per-page-container button.active {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }

        .rows-per-page-container button.active:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .delete-button {
            background-color: red;
            color: white;

        }


        .confirmation-popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            z-index: 1000;
        }

        .confirmation-popup p {
            margin: 0 0 10px;
        }

        .confirmation-popup button {
            margin: 5px;
            padding: 5px 10px;
            cursor: pointer;
        }
        nav ul {
            list-style: none;
            background-color: #333;
            text-align: center;
            padding: 20px;
            margin: 0;
        }

        nav ul li {
            display: inline-block;
            position: relative;
            border-right: 1px solid #fff; 
            padding-right: 1px; 
        }

        nav ul li:last-child {
            border-right: none; 
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
            padding: 10px;
        }

        nav ul li:hover ul {
            display: block;
        }

        nav ul li ul {
            display: none;
            position: absolute;
            background-color: #333;
            padding: 0;
            margin: 0;
            margin-top: 10px;
            
        }

        nav ul li ul li {
            display: block;
            border-top: 1px solid #fff;
        }

        nav ul li ul li a {
            padding: 10px 20px;
            color: #fff;
            text-decoration: none;
        }

        form {
            text-align: center; /* Centrar el contenido del formulario */
        }
        .delete-popup {
            background-color: red;
            color: white; /* Cambia el color del texto si es necesario para que sea legible */
            /* Otros estilos según tus preferencias */
            }
        .create-button {
            border: 2px solid #333;
        }
    </style>
</head>

<body>
        

    <nav>
    <ul>
        <li><a href="#">Inicio</a></li>
        <li><a href="#">Seguridad</a></li>
        <li><a href="#">Procedimientos</a></li>
        <li class="dropdown">
            <a href="#">Mensajes</a>
            <ul class="dropdown-content">
                <li><a href="#">Subopción 1</a></li>
                <li><a href="#">Subopción 2</a></li>
                <li><a href="#">Subopción 3</a></li>
            </ul>
        </li>
        <li><a href="#">Productos</a></li>
        <li><a href="#">Sucursales</a></li>
        <li><a href="#">Catálogo</a></li>
        <li class="dropdown">
            <a href="#">CV</a>
            <ul class="dropdown-content">
                <li><a href="#">Subopción 4</a></li>
                <li><a href="#">Subopción 5</a></li>
            </ul>
        </li>
        <li><a href="#">Ofertas y Lanzamientos</a></li>
        <li><a href="#">Home Slide</a></li>
        <li><a href="#">Pop up</a></li>
        <li><a href="#">Re Call</a></li>
        <li class="dropdown">
            <a href="#">App</a>
            <ul class="dropdown-content">
                <li><a href="#">Subopción 6</a></li>
                <li><a href="#">Subopción 7</a></li>
                <li><a href="#">Subopción 8</a></li>
            </ul>
        </li>
    </ul>
</nav>
    <h2>Roles</h2>
    <div id="rolesContainer"></div>
    <script>
        var roles = @Html.Raw(Json.Serialize(Model));
    </script>
    <script src="~/js/script.js"></script>
    <script src="~/js/pagination.js"></script>
</body>

</html>
