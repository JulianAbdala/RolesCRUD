@using DKbase.web
@{
    Layout = null; 
    var mensaje = ViewData["Mensaje"] as string;
}
@model List<DKbase.web.cRol>;
<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    
    <title>Vista Admin</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style> 
        .page-number.active {
            text-decoration: underline; 
            font-weight: bold; 
            cursor: pointer;
        }
        .page-number.pointer,
        .arrow-button.pointer {
            cursor: pointer; 
        }
        #rolesContainer {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            min-height: 40vh; 
        }

        .pagination {
            margin-top: auto; 
        }
    </style>
</head>
<body>

<div class="navbar">
    <div class="navbar-container">
        <ul class="navbar-list">
            <li class="navbar-item"><a href="#">Inicio</a></li>
            <li class="navbar-item"><a href="#">Roles</a></li>
            <li class="navbar-item"><a href="#">Opcion 2</a></li>
            <li class="navbar-item"><a href="#">Opcion 3</a></li>
            <li class="navbar-item"><a href="#">Opcion 4</a></li>
        </ul>
        <form method="post" action="/logout">
            @Html.AntiForgeryToken()
            <button type="submit" formaction="/admin">Cerrar sesi√≥n</button>
        </form>
    </div>
</div>

<h2>Bienvenido</h2>

<div>
    <p>@mensaje</p>
</div>
<h2>Rols</h2>

<form  id="buscarForm" method="get" action="/welcome/buscarrol">
    <label for="buscarId">Buscar Rol por ID:</label>
    <input type="text" id="buscarrol" name="nombre">
    <button type="submit">Buscar</button>
    <button type="submit" id="refrescar"></button>
</form>

<div id="rolesContainer"></div>

<h2>Creacion de Usuario</h2>
<form method="get" action="/createrol">
<button type="submit" >crear rol</button>
</form>

<div id="dialog" title="Crear Nuevo Rol" style="display: none;">
    <form id="crearRolForm">
        <label for="rolNombre">Nombre del Rol:</label>
        <input type="text" id="rolNombre" name="rolNombre" required>
    </form>
</div>


<h2>Modificar nombre de Usuario</h2>

    <form class="rol-form" method="post" action="/modificarrol">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="idrol">ID del Usuario:</label>
            <input type="number" class="form-control" id="idrol" name="idrol" required>
        </div>
        <div class="form-group">
            <label for="newName">Nuevo Nombre:</label>
            <input type="text" class="form-control" id="newName" name="newName" required>
        </div>
        <button type="submit" class="btn btn-primary" id="modificarUsuarioBtn">Modificar Nombre</button>
    </form>

</div>
<script>
var roles = @Html.Raw(Json.Serialize(Model));
</script>
<script src="~/js/script.js"></script>
</body>
</html>
